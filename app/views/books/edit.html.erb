<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
  <div class="field">
  	<h4>Title</h4>
	<%= f.text_field :title %>
  </div>
  <div class="field-1">
	<h4>Body</h4>
	<%= f.text_area :body %>
  </div>
  <div class="field">
  <br><%= f.submit 'Update Book' %><br>
  </div>
<% end %>

<%= link_to "Show", book_path(@book.id) %> | 
<%= link_to "Back", "/books" %>